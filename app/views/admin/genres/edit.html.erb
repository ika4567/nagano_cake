<div class="container">
  <div class="row">
    <div class="col-md-12 col-lg-10 px-5 mx-auto">

      <h2 class="mb-3">ジャンル編集</h2>

      <div class="row">
        <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch, local:true do |f| %>
        <strong><%= f.label "ジャンル名", class:"mr-5" %></strong>
        <%= f.text_field :name, placeholder: "ジャンル名", class:"mr-5" %>
        <%= f.submit "変更を保存", class:"btn btn-success rounded" %>
        <% end %>
      </div>

    </div>
  </div>
</div>



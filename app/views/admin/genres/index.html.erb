<div class="container">
  <div class="row">

    <h2>ジャンル一覧・追加</h2>

    <div>
      <%= form_with model: @new, local:true do |f| %>
      <%= f.label "ジャンル名" %>
      <%= f.text_field :name %>
      <%= f.submit "新規登録" %>
      <% end %>
    </div>

    <div>
      <table>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>



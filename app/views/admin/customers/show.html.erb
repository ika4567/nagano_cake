<div class="container">
  <div class="row">
    <div class="col-md-12 col-lg-10 px-5 mx-auto">

      <h2><%= @customer.full_name %>さんの会員詳細</h2>

      <div>
        <div class="row">
          <p class="col-3">会員ID</p>
          <p><%= @customer.id %></p>
        </div>
        <div class="row">
          <p class="col-3">氏名</p>
          <p>
          <%= @customer.last_name %> <%= @customer.first_name %>
          </p>
        </div>
        <div class="row">
          <p class="col-3">フリガナ</p>
          <p>
          <%= @customer.last_name_kana %> <%= @customer.first_name_kana %>
          </p>
        </div>
        <div class="row">
          <p class="col-3">郵便番号</p>
          <p><%= @customer.postal_code %></p>
        </div>
        <div class="row">
          <p class="col-3">住所</p>
          <p><%= @customer.address %></p>
        </div>
        <div class="row">
          <p class="col-3">電話番号</p>
          <p><%= @customer.telephone_number %></p>
        </div>
        <div class="row">
          <p class="col-3">メールアドレス</p>
          <p><%= @customer.email %></p>
        </div>
        <!--<div class="row">-->
        <!--  <p class="col-3">会員ステータス</p>-->
          <!--<p class="col-9"><= @customer.is_active %></p>-->
        <!--</div>-->
        <div class="row">
          <div class="offset-md-3 text-center">
            <%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-success mr-lg-3 mb-1" %>
            <%= link_to "注文履歴一覧を見る", admin_root_path, class:"btn btn-primary mb-1" %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
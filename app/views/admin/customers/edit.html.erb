<div class="container">
  <div class="row">
    <div class="col-md-12 col-lg-8 px-5 px-sm-0 mx-auto">

      <h2 class="mb-3">
        <%= @customer.full_name %>さんの会員情報編集
      </h2>

      <div class="row">
        <%= form_with model: @customer, local:true do |f| %>
          <div class="row">
            <%= f.label "会員ID", class:"col-md-3 col-lg-2" %>
            <%= @customer.id, class:"col-md-9 col-lg-6" %>
          </div>
          <div class="row">
            <%= f.label "氏名", class:"col-3" %>
            <%= f.text_field :last_name, placeholder: "姓" %><%= f.text_field :first_name, placeholder: "名" %>
          </div>
          <div class="row">
            <%= f.label "フリガナ", class:"col-3" %>
            <%= f.text_field :last_name_kana, placeholder: "セイ" %><%= f.text_field :first_name_kana, placeholder: "メイ" %>
          </div>
          <div class="row">
            <%= f.label "郵便番号", class:"col-3" %>
            <%= f.text_field :postal_code, class:"col-9" %>
          </div>
          <div class="row">
            <%= f.label "住所", class:"col-3" %>
            <%= f.text_field :address, class:"col-9" %>
          </div>
          <div class="row">
            <%= f.label "電話番号", class:"col-3" %>
            <%= f.text_field :telephone_number, class:"col-9" %>
          </div>
          <div class="row">
            <%= f.label "メールアドレス", class:"col-3" %>
            <%= f.text_field :email, class:"col-9" %>
          </div>
          <!--<div class="row">-->
          <!--<= f.label "会員ステータス", class:"col-3" %>-->
          <!--<= f.radio_button, class:"col-9" %>-->
          <!--</div>-->

          <div class="row">
            <div class="col-3"></div>
            <%= f.submit "変更を保存", class:"col-9 btn btn-success rounded px-5" %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-12 col-lg-10 px-5 mx-auto">

      <h2 class="mb-3">
        <%= @customer.full_name %>さんの会員情報編集
      </h2>

      <%= form_with model: @customer, url: admin_customer_path, method: :patch, local:true do |f| %>
      <div class="form-horizontal">
        <div class="form-group">
          <div class="row align-items-center">
            <%= f.label "会員ID", class:"control-label col-md-3 col-lg-3" %>
            <p class="col-md-9 col-lg-6"><%= @customer.id %></p>
          </div>
        </div>
        <div class="form-group">
          <div class="row align-items-center">
            <%= f.label "氏名", class:"control-label col-md-3 col-lg-3" %>
            <div class="form-inline">
              <%= f.text_field :last_name, placeholder: "姓", class:"form-control mr-md-3" %>
              <%= f.text_field :first_name, placeholder: "名", class:"form-control" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row align-items-center">
            <%= f.label "フリガナ", class:"control-label col-md-3 col-lg-3" %>
            <div class="form-inline">
              <%= f.text_field :last_name_kana, placeholder: "セイ", class:"form-control mr-md-3" %>
              <%= f.text_field :first_name_kana, placeholder: "メイ", class:"form-control" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row align-items-center">
            <%= f.label "郵便番号", class:"col-form-label col-md-3 col-lg-3" %>
            <%= f.text_field :postal_code, class:"form-control col-md-4" %>
          </div>
        </div>
        <div class="form-group">
          <div class="row align-items-center">
            <%= f.label "住所", class:"col-form-label col-md-3 col-lg-3" %>
            <%= f.text_field :address, class:"form-control col-md-8 col-lg-4" %>
          </div>
        </div>
        <div class="form-group">
          <div class="row align-items-center">
            <%= f.label "電話番号", class:"col-form-label col-md-3 col-lg-3" %>
            <%= f.text_field :telephone_number, class:"form-control col-md-4" %>
          </div>
        </div>
        <div class="form-group">
          <div class="row align-items-center">
            <%= f.label "メールアドレス", class:"col-form-label col-md-3 col-lg-3" %>
            <%= f.text_field :email, class:"form-control col-md-4" %>
          </div>
        </div>
        <!--<div class="form-group">-->
        <!--  <div class="row align-items-center">-->
          <!--<= f.label "会員ステータス", class:"col-form-label col-md-3 col-lg-3" %>-->
          <!--<= f.radio_button, class:"form-control col-md-8 col-lg-4" %>-->
          <!--</div>-->
        <!--</div>-->
        <div class="form-group text-center">
            <%= f.submit "変更を保存", class:"btn btn-success rounded" %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
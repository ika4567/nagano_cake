<div>
  <div>

    <h2>
      <%= @customer.full_name %>さんの会員情報編集
    </h2>

    <div>
      <%= form_with model: @customer, local:true do |f| %>
      <%= f.label "会員ID" %>
      <%= @customer.id %>
      <%= f.label "氏名" %>
      <%= f.text_field :last_name, placeholder: "姓" %><%= f.text_field :first_name, placeholder: "名" %>
      <%= f.label "フリガナ" %>
      <%= f.text_field :last_name_kana, placeholder: "セイ" %><%= f.text_field :first_name_kana, placeholder: "メイ" %>
      <%= f.label "郵便番号" %>
      <%= f.text_field :postal_code %>
      <%= f.label "住所" %>
      <%= f.text_field :address %>
      <%= f.label "電話番号" %>
      <%= f.text_field :telephone_number %>
      <%= f.label "メールアドレス" %>
      <%= f.text_field :email %>
      <!--<= f.label "会員ステータス" %>-->
      <!--<= f.radio_button %>-->

      <%= f.submit "変更を保存" %>

    </div>


  </div>
</div>
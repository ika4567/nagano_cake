<div class="container">
  <div class="row">
    <div class="col-md-12 col-lg-10 px-5 mx-auto">

      <h2>会員一覧</h2>
      <div>
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <!--<th>ステータス</th>-->
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customers| %>
            <tr>
              <td><%= customers.id %></td>
              <td><%= link_to customers.full_name, admin_customer_path(customers.id), class:"text-dark" %></td>
              <td><%= customers.email %></td>
              <!--<td><= customers.is_active %></td>-->
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <%= paginate @customers %>
    </div>
  </div>
</div>
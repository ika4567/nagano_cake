<div>
  <div>
    <h2>商品新規登録</h2>

    <div>
      <%= form_with model: @item, url: admin_items_path, method: :post, local:true do |f| %>
  
        <div>
          <%= f.label "商品画像" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div>
          <%= f.label "商品名" %>
          <%= f.text_field :name, placeholder: "商品名" %>
        </div>
        <div>
          <%= f.label "商品説明" %>
          <%= f.text_area :introduction, placeholder: "例：○○が特徴の商品です。" %>
        </div>
        <!--<div>-->
          <!--"ジャンル"-->
        <!--</div>-->
        <div>
          <%= f.label "税抜価格" %>
          <%= f.text_field :price, placeholder: "1000" %>円
        </div>
        <!--<div>-->
          <!--"販売ステータス"-->
          <!--<f.ladio_button>-->
          <!--<f.label :is_active, "販売中">-->
          <!--<= f.ladio_button >-->
          <!--<= f.label :is_active, "販売停止中" >-->
        <!--</div>-->
  
        <div>
          <%= f.submit "新規登録" %>
        </div>
      <% end %>
    </div>


  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 px-5 px-sm-0 mx-auto">

      <div>
        <h2 class="mb-3">商品一覧</h2>
        <%= link_to new_admin_item_path do %>
        <i class="fa-thin fa-plus"></i>
        <% end %>
      </div>

      <div>
        <table class="table">
          <thead class="table-light">
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <!--<th>ステータス</th>-->
            </tr>
          </thead>
          <tbody>
            <% @items.each do |items| %>
            <tr>
              <td><%= items.id %></td>
              <td>
                <%= link_to admin_item_path(items.id) do %>
                  <%= items.name %>
                <% end %>
              </td>
              <td><%= number_to_currency( items.price, precision: 0, unit: "") %></td>
              <td><%= items.genre.name %></td>
              <!--<td><= items.is_active %></td>-->
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!--<div>-->
      <!--  <= paginate @items %>-->
      <!--</div>-->

    </div>
  </div>
</div>
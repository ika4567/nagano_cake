<div>
  <div>

    <h2>商品一覧</h2>
    
    <div><%= link_to "+", new_admin_item_path %></div>

    <table>
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <!--<th>ステータス</th>-->
        </tr>
      </thead>
      <tbody>
        <% @items.each do |items| %>
        <tr>
          <td><%= items.id %></td>
          <td>
            <%= link_to admin_item_path(items.id) do %>
              <%= items.name %>
            <% end %>
          </td>
          <td><%= items.price %></td>
          <td><%= items.genre.name %></td>
          <!--<td><= items.is_active %></td>-->
        </tr>
        <% end %>
      </tbody>
    </table>

    <!--<div>-->

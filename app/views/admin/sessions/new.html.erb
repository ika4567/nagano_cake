
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h2>管理者ログイン</h2>

      <%= form_with model: @admin, url: session_path(resource_name) do |f| %>
        <div class="form-group row">
          <%= f.label "メールアドレス", class:"col-lg-4 col-form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-lg-8 rounded" %>
        </div>

        <div class="form-group row">
          <%= f.label "パスワード", class:"col-lg-4 col-form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class:"col-lg-8 rounded" %>
        </div>

        <div class="form-group row">
          <%= f.submit "ログイン", class:"btn btn-primary rounded px-5 mx-auto" %>
        </div>
      <% end %>
    </div>

    <%= render "admin/shared/links" %>

  </div>
</div>



<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 px-5 px-sm-0 mx-auto">

      <h2>注文履歴一覧</h2>

      <div>
        <table class="table">
          <thead class="table-light">
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <!--<th>注文ステータス</th>-->
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
            <tr>
              <td><%= link_to "order.created_at", admin_order_detail_path(order.order_detail.id) %></td>
              <td><%= order.customer.full_name %></td>
              <td><%= order.order_detail.amount %></td>
              <!--<td><= order.order_status %></td>-->
            </tr>
            <% end %>
          </tbody>
        </table>

        <!--<div>-->
        <!--  <= paginate @items %>-->
        <!--</div>-->

      </div>

    </div>
  </div>
</div>
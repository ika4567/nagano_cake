<div class="container">
  <div class="row">
    <div class="col-md-12 col-lg-10 px-5 mx-auto">

      <h2>注文履歴一覧</h2>

      <div>
        <table class="table">
          <thead>
            <tr>
              <th class="table-active">購入日時</th>
              <th class="table-active">購入者</th>
              <th class="table-active">注文個数</th>
              <!--<th class="table-active">注文ステータス</th>-->
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime('%Y/%m/%d %T'), admin_order_path(order), class:"text-dark" %></td>
              <td><%= order.customer.full_name %></td>
              <td><%= order.order_details.sum(:amount) %></td>
              <!--<td><= order.order_status %></td>-->
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= paginate @orders %>

    </div>
  </div>
</div>
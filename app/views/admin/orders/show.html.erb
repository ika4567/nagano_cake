<div>
  <div>

    <h2>注文履歴詳細</h2>

    <div>

      <table>
        <tr>
          <th>購入者</th>
          <td><%= @order.customer.full_name %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            <%= @order.postal_code %> <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment %></td>
        </tr>
        <!--<tr>-->
          <!--<th>注文ステータス</th>-->
          <!--<td>-->
          <!--  <= form_with model: @order, local:turue do |f| %>-->
          <!--  <= f.select :order_status %>-->
          <!--  <= f.submit "更新", admin_order_path(@order.id) %>-->
          <!--</td>-->
        <!--</tr>-->
      </table>

      <div>
        <% @order_detail.each do |order_detail| %>
          <table>
            <thead>
              <tr>
                <th>商品名</th>
                <th>単価（税込）</th>
                <th>数量</th>
                <th>小計</th>
                <!--<th>製作ステータス</th>-->
                <!--<th></th>-->
              </tr>
            </thead>
            <tbody>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.item.with_tax_price %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.subtotal %></td>
              <!--製作ステータスをenumから呼び出す-->
              <!--<= form_with model: order_detail, local:turue do |f| %>-->
              <!--<td><= f.select :product_status %></td>-->
              <!--<td><= f.submit "更新", admin_order_path(@order.id) %></td>-->
            </tbody>
          </table>

          <teble>
            <tr>
              <th>商品合計</th>
              <td><%= @total_price += order_detail.subtotal %>円</td>
            </tr>
            <tr>
              <th>送料</th>
              <td><%= postage %>円</td>
            </tr>
            <tr>
              <th>請求金額合計</th>
              <th><%= ( @total_price += order_detail.subtotal ) + postage %>円</th>
            </tr>
          </table>
        <% end %>
      </div>

    </div>

  </div>
</div>

<%= form_with model: address, local:true do |f| %>
  <div class="form-group row">
    <%= f.label "郵便番号(ハイフンなし)", class:"col-sm-5 col-md-3 col-form-label" %>
    <%= f.text_field :postal_code, placeholder: "0000000", class:"col-sm-5 col-md-3 form-control" %>
  </div>
  <div class="form-group row">
    <%= f.label "住所", class:"col-sm-5 col-md-3 col-form-label" %>
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class:"col-sm-5 col-md-5 form-control" %>
  </div>
  <div class="form-group row">
    <%= f.label "宛名", class:"col-sm-5 col-md-3 col-form-label" %>
    <%= f.text_field :name, placeholder: "山田花子", class:"col-sm-5 col-md-3 form-control" %>
  </div>
<% end %>
<div>
  <div>

    <h2>配送先登録/一覧</h2>

    <div>
      <%= form_with model: @address, method: :post, url: public_addresses_path, local:true do |f| %>
      <div>
        <%= f.label "郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code %>
      </div>
      <div>
        <%= f.label "住所" %>
        <%= f.text_field :address %>
      </div>
      <div>
        <%= f.label "宛名" %>
        <%= f.text_field :name %>
      </div>
      <%= f.submit "新規登録" %>
      <% end %>
    </div>

    <div>
      <table class="table">
        <thead>
          <td>郵便番号</td>
          <td>住所</td>
          <td>宛名</td>
          <td></td>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><%= link_to "編集する", edit_public_address_path(address) %></td>
          <td><%= link_to "削除する", method: :delete, url: public_address_path(address) %></td>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
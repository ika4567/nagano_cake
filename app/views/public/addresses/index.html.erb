<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 px-5 px-sm-0">

      <h2>配送先登録/一覧</h2>

      <div>
        <%= render 'address', address: @address %>
        <div>
          <%= form_with model: @address, local:true do |f| %>
            <%= f.submit "新規登録", class:"btn btn-success" %>
          <% end %>
        </div>
      </div>

      <div class="row">
        <table class="table table-bordered">
          <thead>
            <tr>
              <td class="col-2">郵便番号</td>
              <td class="col-sm-5 col-md-5">住所</td>
              <td class="col-2">宛名</td>
              <td colspan="2"></td>
            </tr>
          </thead>
          <tbody>
            <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td><%= link_to "編集する", edit_address_path(address.id), class:"btn btn-success" %></td>
              <td><%= link_to "削除する", address_path(current_customer), method: :delete, class:"btn btn-danger" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>
<div>
  <div>

    <div>
      <h2><strong>商品一覧</strong>(全<%= @items.count %>件)</h2>
      <% @items.each do |item| %>
        <div>
          <!--商品画像-->
          <%= link_to item_path(item) do %>
            <%= image_tag item.get_image %>
          <% end %>
          <!--商品名-->
          <%= item.name %>
          <!--税抜価格-->
          ￥<%= number_to_currency( item.price, precision: 0, unit: "") %>
        </div>
      <% end %>
    </div>

  </div>
</div>
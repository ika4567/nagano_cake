<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 px-5 px-sm-0">

      <div class="d-flex">
        <div class="col-lg-4">
          <%= image_tag @item.get_image(250,250) %>
        </div>
        <div class="col-lg-8">
          <p>
            <strong>
              <%= @item.name %>
            </strong>
          </p>
          <span>
            <%= @item.introduction %>
          </span>
          <p>
            <strong>
            ￥<%= number_to_currency( @item.with_tax_price, precision: 0, unit: "") %>
            </strong>
            (税込)
          </p>
          <div>
            <%= form_with model: @cart_item, url: cart_items_create_path, local:true do |f| %>
            <%= f.hidden_field :item_id, value: @item.id %>
            <%= f.select :amount, *[1..5], include_blank: "個数選択" %>
            <%= f.submit "カートに入れる", class:"btn btn-success" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
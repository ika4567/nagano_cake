<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 px-5 px-sm-0">

      <h2>注文履歴詳細</h2>

      <div class="row">
        <strong>注文情報</strong>
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th>注文日</th>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <th>配送先</th>
              <td>
                <%= order.postal_code %><br>
                <%= order.address %><br>
                <%= order.name %>
              </td>
            </tr>
            <tr>
              <th>支払方法</th>
              <td><%= order.payment %></td>
            </tr>
            <tr>
              <th>ステータス</th>
              <td><%= order.order_status %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="row">
        <strong>請求金額</strong>
        <table class="table table-bordered">
          <tr>
            <th>商品合計</th>
            <td><%= %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= postage %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td><%= order.billing %></td>
          </tr>
        </table>
      </div>

      <div class="row">
        <strong>注文内容</strong>
        <table class="table table-bordered">
          <thead>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </thead>
          <tbody>
          <% @order_details.each do |order_detail| %>
            <tr><td><%= order_detail.item.name %></td></tr>
            <tr><td><%= order_detail.tax_price %></td></tr>
            <tr><td><%= order_detail.amount %></td></tr>
            <tr><td><%= order_detail.sum_of_price %></td></tr>
          <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>

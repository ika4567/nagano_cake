<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 px-5 px-sm-0">

      <h2>注文履歴一覧</h2>

      <div class="row">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th class="table-active">注文日</th>
              <th class="table-active">配送先</th>
              <th class="table-active">注文商品</th>
              <th class="table-active">支払金額</th>
              <!--<th>ステータス</th>-->
              <th class="table-active">注文詳細</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
                <td>
                  <%= order.postal_code %><br>
                  <%= order.address %><br>
                  <%= order.name %>
                </td>
                <td>
                  <% order.order_details.each do |order_detail| %>
                  <%= order_detail.item.name %>
                  <% end %>
                </td>
                <td><%= number_to_currency( order.billing, precision: 0, format: "%u%n", unit: "￥") %></td>
                <!--<td><= order.order_status %></td>-->
                <td><%= link_to "表示する", order_path(order), class:"btn btn-primary" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>

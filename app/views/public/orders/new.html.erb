<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 px-5 px-sm-0">

      <h2>注文情報入力</h2>

      <div>
        <%= form_with model: @order, url: orders_confirm_path, local:true do |f| %>
        <strong>注文方法</strong>
        <div>
          <%= f.radio_button :payment, Order.payment_methods.key(0) %>
          <%= f.label :payment, Order.payment_methods_i18n[:credit_card] %>
        </div>
        <div>
          <%= f.radio_button :payment, Order.payment_methods.key(1) %>
          <%= f.label :payment, Order.payment_methods_i18n[:transfer] %>
        </div>
        <strong>お届け先</strong>
        <div>
          <%= f.radio_button :address, 'sellect_address' %>
          <%= f.label :address, "ご自身の住所" %><br>
          <%= current_customer.address %>
        </div>
        <div>
          <%= f.radio_button :address_id, 'address_id' %>
          <%= f.label :address_id, "登録済み住所から選択" %><br>
          <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display) %>
        </div>
        <div>
          <%= f.radio_button :address, ['postal_code', 'address', 'name'] %>
          <%= f.label :address, "新しいお届け先" %>
          <%= render 'public/addresses/address', address: @order %>
        </div>
        <div class="form-group text-center">
          <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
        </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
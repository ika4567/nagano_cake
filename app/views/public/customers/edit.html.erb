<div>
  <div>

    <h2>会員情報編集</h2>

    <%= form_with model: @user, local:true do |f| %>

      <div class="field">
        <%= f.label "名前" %>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </div>

      <div class="field">
        <%= f.label "フリガナ" %>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </div>

      <div class="field">
        <%= f.label "郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code %>
      </div>

      <div class="field">
        <%= f.label "住所" %>
        <%= f.text_field :address %>
      </div>

      <div class="field">
        <%= f.label "電話番号(ハイフンなし)" %>
        <%= f.text_field :telephone_number %>
      </div>

      <div class="field">
        <%= f.label "メールアドレス" %>
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="actions">
        <%= f.submit "編集内容を保存" %>
        <%= link_to "退会する", public_customers_cancel_path %>
      </div>
    <% end %>

  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 px-5 px-sm-0">

      <div>
        <h2>ショッピングカート</h2>
        <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class:"btn btn-danger" %>
      </div>

      <div class="row">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @cart_items.each do |cart_item| %>
              <tr>
                <td><%= image_tag cart_item.get_image %><%= cart_item.item.name %></td>
                <td><%= number_to_currency( cart_item.item.with_tax_price, precision: 0, unit: "") %></td>
                <td>
                  <%= form_with model: cart_item, url: cart_items_update_path(cart_item), method: :patch, local:true do |f| %>
                  <%= f.select :amount, *[1..5] %>
                  <%= f.submit "変更", class:"btn btn-success" %>
                  <% end %>
                </td>
                <td><%= number_to_currency( cart_item.sub_total, precision: 0, unit: "") %></td>
                <td><%= link_to "削除する", cart_items_destroy_path(cart_item), method: :delete, class:"btn btn-danger" %></td>
              </tr>
              <tr>
                <th>合計金額</th>
                <td><%= number_to_currency( @total_price += cart_item.sub_total, precision: 0, unit: "") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div>
        <%= link_to "買い物を続ける", root_path, class:"btn btn-primary" %>
        <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %>
      </div>

    </div>
  </div>
</div>

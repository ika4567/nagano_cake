<div class="container">
  <div class="row">
    <div class="col-md-12 col-lg-10 px-5 mx-auto">

      <h2>新規会員登録</h2>

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-horizontal">
          <div class="form-group">
            <div class="row align-items-center">
                <%= f.label "名前", class:"control-label col-md-4 col-lg-4" %>
              <div class="form-inline">
                <label>（姓）　</label><%= f.text_field :last_name, class:"form-control col-sm-8 col-md-3 col-lg-3 md-mr-3" %>
                <label>（名）　</label><%= f.text_field :first_name, class:"form-control col-sm-8 col-md-3 col-lg-3" %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row align-items-center">
              <%= f.label "フリガナ", class:"control-label col-md-4 col-lg-4" %>
              <div class="form-inline">
                <label>（セイ）</label><%= f.text_field :last_name_kana, class:"form-control col-sm-8 col-md-3 col-lg-3 md-mr-3" %>
                <label>（メイ）</label><%= f.text_field :first_name_kana, class:"form-control col-sm-8 col-md-3 col-lg-3" %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row align-items-center">
              <%= f.label "メールアドレス", class:"col-form-label col-md-4 col-lg-4" %>
              <%= f.email_field :email, autocomplete: "email", class:"form-control col-md-8 col-lg-4" %>
            </div>
          </div>
          <div class="form-group">
            <div class="row align-items-center">
              <%= f.label "郵便番号(ハイフンなし)", class:"col-form-label col-md-4 col-lg-4" %>
              <%= f.text_field :postal_code, class:"form-control col-md-8 col-lg-4" %>
            </div>
          </div>
          <div class="form-group">
            <div class="row align-items-center">
              <%= f.label "住所", class:"col-form-label col-md-4 col-lg-4" %>
              <%= f.text_field :address, class:"form-control col-md-8 col-lg-6" %>
            </div>
          </div>
          <div class="form-group">
            <div class="row align-items-center">
              <%= f.label "電話番号(ハイフンなし)", class:"col-form-label col-md-4 col-lg-4" %>
              <%= f.text_field :telephone_number, class:"form-control col-md-8 col-lg-4" %>
            </div>
          </div>
          <div class="form-group">
            <div class="row align-items-center">
              <%= f.label "パスワード(6文字以上)", class:"col-form-label col-md-4 col-lg-4" %>
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control col-md-8 col-lg-4" %>
            </div>
          </div>
          <div class="form-group">
            <div class="row align-items-center">
              <%= f.label "パスワード(確認用)", class:"col-form-label col-md-4 col-lg-4" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control col-md-8 col-lg-4" %>
            </div>
          </div>
          <div class="form-group text-center">
            <%= f.submit "新規登録", class:"btn btn-success" %>
          </div>
        </div>
      <% end %>

      <h2>既に登録済みの方</h2>
      <p><%= render "public/shared/links" %>からログインしてください。</p>

    </div>
  </div>
</div>